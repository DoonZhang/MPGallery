<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.mepstudio.mpgallery.compressor.CompressActivity">

    <include
        android:id="@+id/include"
        layout="@layout/compressor_content_main" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_add"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="bottom|center"
        android:layout_margin="@dimen/fab_margin"
        android:alpha="0.7"
        app:backgroundTint="@color/logoColor"
        app:elevation="15dp"
        app:srcCompat="@drawable/home_add" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_shot"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="top|left"
        android:layout_margin="@dimen/fab_margin"
        android:alpha="0.6"
        app:backgroundTint="@color/bg_color"
        app:elevation="24dp"
        app:layout_anchor="@id/include"
        app:layout_anchorGravity="bottom|right"
        app:srcCompat="@drawable/camera01"
        tools:ignore="RtlHardcoded" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_bat"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="top|left"
        android:layout_margin="@dimen/fab_margin"
        android:alpha="0.6"
        app:backgroundTint="@color/bg_color"
        app:elevation="24dp"
        app:layout_anchor="@id/include"
        app:layout_anchorGravity="bottom|left"
        app:srcCompat="@drawable/checklist"
        tools:ignore="RtlHardcoded" />

</android.support.design.widget.CoordinatorLayout>
